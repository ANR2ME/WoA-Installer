<UserControl x:Class="Intaller.Wpf.Parts.LogPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Intaller.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:MainViewModel}">
    <ListView Grid.Row="1" ItemsSource="{Binding Events}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Message}"/>
            </DataTemplate >
        </ListView.ItemTemplate>
    </ListView>
</UserControl>

<UserControl x:Class="Intaller.Wpf.Parts.Sections.FullInstallPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Intaller.Wpf"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sections="clr-namespace:Intaller.Wpf.Parts.Sections"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:MainViewModel}">
    <StackPanel Margin="8">
        <TextBlock Style="{StaticResource TitleStyle}">Full Install</TextBlock>
        <TextBlock Margin="12">
            <Span>
                This will install <Bold>Windows 64 ARM into your Phone</Bold>. <LineBreak />
                This option is thought to be used on a phone that has just been <Bold>unlocked</Bold> (with unlocked bootmanager)
            </Span>
        </TextBlock>
        <sections:WimOptionsPart />
        <local:BusyButton Command="{Binding FullInstallCommand}" FontSize="18" ButtonContent="Install" Image="/Assets/gears.png" Width="120"/>
    </StackPanel>

</UserControl>